
<div class="flex justify-between">
    <span class="pb-2 text-center">{{name}}</span>
    <div class="flex flex-row">
        {{#if showSendCuration}}
        <div class="inline-block pl-2 pr-2 md:pl-4 md:pr-4 "><a href="/trip/{{id}}/curate"><i class="fas fa-plane-departure text-gray-700 hover:text-red-400"></i></a></div>
        {{/if}}
        {{#if showView}}
        <div class="inline-block pl-4 pr-2 md:pl-4 md:pr-4 "><a href="{{url}}"><i class="fas fa-eye text-gray-700 hover:text-red-400"></i></a></div>
        {{/if}}
        {{#if showDelete}}
        <div class="inline-block pl-2 pr-2 md:pl-4 md:pr-4 "><a class="w-auto flex-grow-0" onclick="deleteTrip({{id}})" href="javascript:void(0);"><i class="fas fa-trash-alt text-gray-700 hover:text-red-400"></i></a></div>
        {{/if}}
        {{#if showEdit}}
        <div class="inline-block pl-2 pr-2 md:pl-4 md:pr-4 "><a href="/trip/{{id}}"><i class="fas fa-pencil-alt text-gray-700 hover:text-green-400"></i></a></div>
        {{/if}}
    </div>
</div>

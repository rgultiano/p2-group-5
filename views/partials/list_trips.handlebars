<div class="grid grid-cols-1 grid-rows-10 text-gray-700 text-sm med:text-base lg:text-lg italic mt-5"><!--table data for completed trips-->
    {{#each trips}}
    <div class="flex justify-between">
        <span class="pb-2 text-center">{{name}}</span>
        <div class="flex flex-row">
            <i class="fas fa-trash-alt text-gray-700 hover:text-red-400 mr-20"></i>
            <a href="/trip/{{id}}"><i class="fas fa-pencil-alt text-gray-700 hover:text-green-400"></i></a>
        </div>
    </div>
    {{/each}}
</div>
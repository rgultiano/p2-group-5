    {{#content "title"}}    
    <title>TravelBug - Trip</title>
    {{/content}}
    {{#content "head"}}    
    <!-- All the stylesheets -->
    <link rel="stylesheet" href="/css/customStyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP&family=ZCOOL+KuaiLe&display=swap" rel="stylesheet">

    <!-- All the required scripts -->
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="/js/trip.js"></script>
    {{#if curate_view}}
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/pikaday/css/pikaday.css">
    {{/if}}
    {{/content}}
    <div class="title py-4 pl-2">
    <h2 class="text-2xl font-bold leading-7"><span id="trip_name" spellcheck="false" contenteditable="true">{{#if trip.id}}{{trip.name}}{{else}}My New Trip...{{/if}}</span>&nbsp;<i class="text-sm far fa-edit"></i></h2>
    </div>
    {{#if curate_view}}
    <div class="curate-view">
        <form class="login-form bg-blue-200 shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <h3 class="text-xl mb-2 font-bold">Curation Form</h3>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="curate_group">
                    Group Size
                </label>
                <input class="shadow bg-white appearance-none border rounded w-64 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="curate_group" type="text" placeholder="# people">
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="curate_origin">
                    Departure from
                </label>
                <input class="shadow bg-white appearance-none border rounded w-64 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="curate_origin" type="text" placeholder="City you will depart from">
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="curate_departure">
                    Departure date
                </label>
                <input class="shadow bg-white appearance-none border rounded w-64 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="curate_departure" type="text" placeholder="dd/mm/yyyy">
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="curate_return">
                    Return date
                </label>
                <input class="shadow bg-white appearance-none border rounded w-64 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="curate_return" type="text" placeholder="dd/mm/yyyy">
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="curate_notes">
                    Notes for Curators:
                </label>
                <textarea class="shadow bg-white appearance-none border rounded w-full resize-y h-24 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="curate_notes" type="text" placeholder="Notes..."></textarea>
            </div>
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                Submit
            </button>
        </form>
    </div>
    {{/if}}
    <div class="content">
        <section class="tripCreatorSec" id="tripCreatorSec">
            <div class="tripCreator" id="tripCreator">
                <div class="inputSec">
                    <input class="input" type="text" placeholder="Add a city..." id="add">
                    <button class="addBtn" onclick="getSearch()" id="submit"><i class="fas fa-plus"></i></button>
                </div>
            </div>
            <div class="saveBtnWrap">
                <button class="saveBtn" onclick="saveData()"><i class="fas fa-save"></i></button>
            </div>
    
        </section>

        <section class="mapPreview" id="mapPreview">
            <div id="map"></div>
        </section>
    </div>
    {{#content "scripts"}}
    {{#if curate_view}}
        <script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script>
        <script src="/js/curate.js"></script>
    {{/if}}
    <script type="text/javascript">
        const user_id = '{{sess_user_id}}';
        {{#if trip.id}}
        let trip_id = '{{trip.id}}';
        {{else}}
        const trip_id = null;
        {{/if}};
    </script>
    <script    
      src="https://maps.googleapis.com/maps/api/js?key={{ENV.GOOGLE_API}}&callback=initMap&libraries=&v=weekly"
      async
    ></script>
    {{/content}}
